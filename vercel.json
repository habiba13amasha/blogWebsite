{
  "version": 2,
  "builds": [
    {
      "src": "Frontend/blogWebsite/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "Backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/Frontend/blogWebsite/dist/index.html" }
  ]
}